doctype html
html
  head
    meta(charset="utf-8")
    title #{title} | wspp
    style.
      html {
        color-scheme: light dark;
      }
      body {
        font-family: system-ui;
        font-size: 1.125rem;
        line-height: 1.5;
      }
      table {
        min-width: 220px;
      }
      table, td {
        border: 1px solid #333;
      }
      thead {
        background-color: #333;
        color: #fff;
      }
      main {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: 5px;
      }
  body
    block page
