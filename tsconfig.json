{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
