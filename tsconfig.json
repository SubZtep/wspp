{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "watchOptions": {
    "excludeFiles": ["server.js"]
  },
  "exclude": ["node_modules"]
}
